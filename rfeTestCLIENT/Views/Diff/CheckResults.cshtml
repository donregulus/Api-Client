@model rfeTestCLIENT.Models.Diff

@{
    ViewBag.Title = "CheckResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @placeholder = "ID" } })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.TextArea("Result",(string) ViewBag.Result, new { @class = "form-control", @readonly = "false" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Result" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("BACK TO MENU", "Index")
</div>


